# 邮箱配置
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=imap.example.com
EMAIL_PORT=993
EMAIL_TLS=true

# 服务器配置
PORT=3000
WS_PORT=3001

# 认证配置
AUTH_ENABLED=true
API_TOKEN=your_api_token_here
WS_TOKEN=your_websocket_token_here

# 邮件服务配置
EMAIL_RECONNECT_MAX_ATTEMPTS=5
EMAIL_RECONNECT_INTERVAL=5000
EMAIL_CHECK_INTERVAL=30000
EMAIL_TLS_REJECT_UNAUTHORIZED=false

# WebSocket服务配置
WS_CLIENT_CHECK_INTERVAL=15000
WS_DEFAULT_TIMEOUT=300000
WS_PING_INTERVAL=30000

# HTTP API服务配置
API_DEFAULT_TIMEOUT=60000
API_CORS_ORIGINS=*
API_CORS_HEADERS=Origin, X-Requested-With, Content-Type, Accept
API_CORS_METHODS=GET, POST, PUT, DELETE, OPTIONS

# 验证码提取配置
CODE_MIN_LENGTH=4
CODE_MAX_LENGTH=8
LOG_EMAIL_CONTENT_LENGTH=100
LOG_EMAIL_CONTENT_FULL_LENGTH=200